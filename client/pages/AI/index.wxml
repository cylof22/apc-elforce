<!--index.wxml-->
<view class="container">
    <view class="style-row">
        <image
            class="style-image"
            src="../../images/fixed-styles/still-life-vase-with-fifteen-sunflowers-1888-1.jpg"
            mode="widthFix"
            bindtap="selectVangogh"
        ></image>
        <image
            class="style-image"
            src="../../images/fixed-styles/autumn-on-the-seine-at-argenteuil.jpg"
            mode="widthFix"
            bindtap="selectMonet"
        ></image>
    </view>
    <view class="style-row">
        <image
            class="style-image"
            src="../../images/fixed-styles/forest.jpg"
            mode="widthFix"
            bindtap="selectCezanne"
        ></image>
        <image
            class="style-image"
            src="../../images/fixed-styles/la_muse.jpg"
            mode="widthFix"
            bindtap="selectLamuse"
        ></image>
    </view>
    <view class="style-row">
        <image
            class="style-image"
            src="../../images/fixed-styles/rain_princess.jpg"
            mode="widthFix"
            bindtap="selectRainPrincess"
        ></image>
        <image
            class="style-image"
            src="../../images/fixed-styles/the_scream.jpg"
            mode="widthFix"
            bindtap="selectScreem"
        ></image>
    </view>
    <view class="style-row">
        <image
            class="style-image"
            src="../../images/fixed-styles/the_shipwreck_of_the_minotaur.jpg"
            mode="widthFix"
            bindtap="selectShipwreck"
        ></image>
        <image
            class="style-image"
            src="../../images/fixed-styles/udnie.jpg"
            mode="widthFix"
            bindtap="selectUdnie"
        ></image>
    </view>
    <view class="style-row">
        <image
            class="style-image"
            src="../../images/fixed-styles/wave.jpg"
            mode="widthFix"
            bindtap="selectWave"
        ></image>
    </view>
    <view class="uploader-container" wx:if="{{styleImgURL}}">
        <image
            class="uploader-image"
            src="{{styleImgURL}}"
            mode="aspectFit"
        ></image>
    </view>


    <view class="uploader-text" bindtap="doStyleTransfer">
        <text>创作</text>
    </view>
    
    <view class="preview-container" wx:if="{{previewImgURL}}">
        <image
            class="uploader-image"
            src="{{previewImgURL}}"
            mode="aspectFit"
            bindtap='OnPreviewResult'
        ></image>
        <canvas hidden="true" styles="width: 1024px;height: 1024px;" canvas-id="shareCanvas"/>
        <button class="btn-share" type="primary" bindtap="saveAndShare">保存图片，分享到朋友圈</button>
    </view>
</view>
