/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.uploader-image {
    padding-top: 5px;
    padding-bottom: 5px;
}

.uploader-text {
    padding-left: 30px;
}

.uploader-text, .tunnel-text {
    width: 100%;
    line-height: 52px;
    font-size: 34rpx;
    color: #007AFF;
}

.uploader-container {
    width: 100%;
    padding: 20rpx 20rpx 20rpx 20rpx;
    display: flex;
    flex-direction: row;
    align-content: center;
    justify-content: center;
    box-sizing: border-box;
    border-top: 1px solid rgba(0, 0, 0, .1);
}

.tablist {
    height: 50%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.tablist .tab {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50px;
    width: 25%;
    padding-left: 10px;
    padding-right: 10px;
}

.btn-share {
  border-radius: 50rpx!important;
}

.style-row {
  display: flex;
  justify-content: space-around;
}

.style-image {
  width: 330rpx;
  border-radius: 13rpx 13rpx 0 0;
  padding: 5px 5px 5px 5px;
}

.preview-container {
    width: 100%;
    padding: 20rpx 20rpx 20rpx 20rpx;
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: center;
    box-sizing: border-box;
    border-top: 1px solid rgba(0, 0, 0, .1);
}