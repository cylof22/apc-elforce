<view class='product-row' wx:for='{{productList}}' wx:key='id' wx:if='{{index%2 === 0}}'>
  <navigator class='product-card' wx:for='{{[productList[index], productList[index+1]]}}' wx:key='id' wx:for-index='pindex' wx:for-item='pitem'>
    <image class='product-image' src='{{pitem.image}}' data-src="{{pitem.image}}" mode='aspectFix' bindtap='previewProduct'></image>
    <view class='product-name'>{{pitem.name}}</view>
  </navigator>
</view>